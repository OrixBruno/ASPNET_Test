        });
        $('#CampoQuartaItaim_PossuiCampo').click(function () {
            $(this).is(':checked') ? $('#CampoQuartaItaim_Dirigente').attr('disabled', false) : $('#CampoQuartaItaim_Dirigente').attr('disabled', true);
            $(this).is(':checked') ? $('#CampoQuartaItaim_Local').attr('disabled', false) : $('#CampoQuartaItaim_Local').attr('disabled', true);
        });
        $('#CampoSextaItaim_PossuiCampo').click(function () {
            $(this).is(':checked') ? $('#CampoSextaItaim_Dirigente').attr('disabled', false) : $('#CampoSextaItaim_Dirigente').attr('disabled', true);
            $(this).is(':checked') ? $('#CampoSextaItaim_Local').attr('disabled', false) : $('#CampoSextaItaim_Local').attr('disabled', true);
        });

        //FERRAZ
        $('#CampoSegundaFerraz_PossuiCampo').click(function () {
            $(this).is(':checked') ? $('#CampoSegundaFerraz_Dirigente').attr('disabled', false) : $('#CampoSegundaFerraz_Dirigente').attr('disabled', true);
            $(this).is(':checked') ? $('#CampoSegundaFerraz_Local').attr('disabled', false) : $('#CampoSegundaFerraz_Local').attr('disabled', true);
        });
        $('#CampoTercaFerraz_PossuiCampo').click(function () {
            $(this).is(':checked') ? $('#CampoTercaFerraz_Dirigente').attr('disabled', false) : $('#CampoTercaFerraz_Dirigente').attr('disabled', true);
            $(this).is(':checked') ? $('#CampoTercaFerraz_Local').attr('disabled', false) : $('#CampoTercaFerraz_Local').attr('disabled', true);
        });
        $('#CampoQuartaFerraz_PossuiCampo').click(function () {
            $(this).is(':checked') ? $('#CampoQuartaFerraz_Dirigente').attr('disabled', false) : $('#CampoQuartaFerraz_Dirigente').attr('disabled', true);
            $(this).is(':checked') ? $('#CampoQuartaFerraz_Local').attr('disabled', false) : $('#CampoQuartaFerraz_Local').attr('disabled', true);
        });
        $('#CampoQuintaFerraz_PossuiCampo').click(function () {
            $(this).is(':checked') ? $('#CampoQuintaFerraz_Dirigente').attr('disabled', false) : $('#CampoQuintaFerraz_Dirigente').attr('disabled', true);
            $(this).is(':checked') ? $('#CampoQuintaFerraz_Local').attr('disabled', false) : $('#CampoQuintaFerraz_Local').attr('disabled', true);
        });
        $('#CampoSextaFerraz_PossuiCampo').click(function () {
            $(this).is(':checked') ? $('#CampoSextaFerraz_Dirigente').attr('disabled', false) : $('#CampoSextaFerraz_Dirigente').attr('disabled', true);
            $(this).is(':checked') ? $('#CampoSextaFerraz_Local').attr('disabled', false) : $('#CampoSextaFerraz_Local').attr('disabled', true);
        });
    </script>
}